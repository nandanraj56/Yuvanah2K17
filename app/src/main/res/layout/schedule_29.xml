<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <Button
        android:id="@+id/button19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:onClick="Prize29b"
        android:text="Prize Distribution Ceremony" />

    <Button
        android:id="@+id/button20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button19"
        android:layout_alignLeft="@+id/button19"
        android:layout_alignRight="@+id/button19"
        android:layout_alignStart="@+id/button19"

        android:layout_below="@+id/button19"
        android:layout_marginTop="30dp"
        android:onClick="Enchanted29b"
        android:text="Enchanted Blossoming Nights" />
    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Events Category:"
        android:layout_marginTop="8sp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white" />
</RelativeLayout>